@model BookShop.Models.ViewModels.CategoryViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container-fluid">
    <form asp-action="CreatePhoto">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-light text-center">
                        افزودن اثر
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <div class="col-md-4 text-center">
                                <input asp-for="title" class="form-control" placeholder="عنوان دسته بندی" />
                                <span asp-validation-for="title" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <div class="col-md-12 ">
                                <div class="fileinput fileinput-new" data-provides="fileinput">
                                    <div class="fileinput-new thumbnail" style="height: 150px;">
                                        <img src="/images/No_Image_Available.jpg" />
                                    </div>
                                    <div class="fileinput-preview fileinput-exists thumbnail" style="height:200px"> </div>
                                    <div>
                                        <span class="btn default btn-file">
                                            <span class="fileinput-new btn btn-success"> انتخاب کنید </span>
                                            <span class="fileinput-exists btn btn-warning"> تغییر عکس </span>
                                            <input type="file" name="Image" id="Image" accept=".jpg, .png, .jpeg, .gif, .tif, .tiff, .JPG" />
                                        </span>
                                        <a href="javascript:;" class="btn btn-danger fileinput-exists" data-dismiss="fileinput"> حذف </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <div class="col-md-12 text-center">
                                <textarea asp-for="Detailes" class="form-control" placeholder="کپشن دسته بندی"></textarea>
                                <span asp-validation-for="Detailes" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <input type="checkbox" asp-for="IsPublish" class="ml-1" />
                            <label asp-for="IsPublish" class="form-control-label"> </label>
                        </div>
                    </div>

                    <div class="card-footer bg-light text-right">
                       
                        <button type="submit" class="btn btn-success float-left">ذخیره اطلاعات</button>
                    </div>
                </div>
                </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


